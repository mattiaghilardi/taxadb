citHeader("To cite taxadb in publications use:")

citEntry(entry = "Article",
  title        = "taxadb: A high-performance local taxonomic database interface",
  author       = personList(as.person("Kari E. A Norman"),
                   as.person("Scott Chamberlain"),
                   as.person("Carl Boettiger")),
  journal      = "Methods in Ecology and Evolution",
  year         = "2020",
  volume       = "11",
  number       = "9",
  pages        = "1153--1159",
  textVersion  =
  paste("Kari E. A. Norman, Scott Chamberlain, and Carl Boettiger (2020).",
        "taxadb: A high-performance local taxonomic database interface.",
        "Methods in Ecology and Evolution, 11(9), 1153-1159.",
        "doi:10.1111/2041-210X.13440.")
)
